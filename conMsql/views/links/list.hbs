<div class="container">
	<div class="row">
		{{#each links}}
			<div class="col-md-3">
	<div class="card text-center">
		<div class="card-body">
			<a href="{{url}}" target="_blank">
				<h3>
					{{title}}
				</h3>
			</a>
			<p class="m-2">{{descripcion}}</p>
			<p>{{timeago created_at}}</p>	
			<a href="/links/delete/{{id}}" class="btn btn-danger">Borrar</a>
			<a href="/links/editar/{{id}}" class="btn btn-secondary">Editar</a>
		</div>	
	</div>
</div>
{{else}}
<div class="col-md-4 mx-auto">
	<div class="card card-body text-center">
		<p>No hay nada creado a√∫n</p>
		<a href="/links/add">Crea Uno</a>
	</div>
</div>
		{{/each}}
	</div>
</div>